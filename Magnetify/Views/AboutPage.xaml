                       TextDecorations="Underline"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="0,0,0,10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenUrlCommand}" CommandParameter="https://github.com/bilulib"/>
