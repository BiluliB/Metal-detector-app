<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:common="clr-namespace:Magnetify.Common"
             x:Class="Magnetify.Views.RecentPage"
             Title="Recent Values">
    <VerticalStackLayout>
        <ScrollView>
            <CollectionView x:Name="RecentCollectionView" ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="15, 8">
                            <Label Text="{Binding Name}" FontSize="Medium" />
                            <Label Text="{Binding Description}" FontSize="Small" HorizontalOptions="EndAndExpand" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>